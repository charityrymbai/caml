generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  user_id    Int       @id @default(autoincrement())
  email      String    @unique
  name       String
  password   String    @default("")
  college    String    @default("")
  semester   String    @default("")
  branch     String    @default("")
  major      String    @default("")
  createdAt  DateTime  @default(now())
  Uploads    Uploads[]
  Project    Project[]
}

model Uploads {
  upload_id         Int              @id @default(autoincrement())
  type              String            @default("")
  name             String            @default("")
  subject           String?           @default("")
  description       String?          @default("")
  keywords          String?          @default("")
  url               String
  createdAt         DateTime         @default(now())
  user_id           Int
  user              User             @relation(fields: [user_id], references: [user_id])
  HashTagsOnUploads HashTagsOnUploads[]
}

model Project {
  project_id        Int               @id @default(autoincrement())
  name              String
  description       String
  url               String
  createdAt         DateTime          @default(now())
  user_id           Int
  user              User              @relation(fields: [user_id], references: [user_id])
  HashTagsOnProjects HashTagsOnProjects[]
}

model HashTags {
  hash_tag_id       Int               @id @default(autoincrement())
  hash_tag          String
  HashTagsOnUploads HashTagsOnUploads[]
  HashTagsOnProjects HashTagsOnProjects[]
}

model HashTagsOnUploads {
  upload_id   Int
  hash_tag_id Int
  uploads     Uploads @relation(fields: [upload_id], references: [upload_id])
  hash_tags   HashTags @relation(fields: [hash_tag_id], references: [hash_tag_id])
  
  @@id([hash_tag_id, upload_id])
}

model HashTagsOnProjects {
  project_id   Int
  hash_tag_id  Int
  projects     Project @relation(fields: [project_id], references: [project_id])
  hash_tags    HashTags @relation(fields: [hash_tag_id], references: [hash_tag_id])

  @@id([hash_tag_id, project_id])
}
